<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/styleSheets/login&register.css"></link>

    <h3 class="text-white text-center mt-5">Welcome Back <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-emoji-laughing-fill text-warning mb-2" viewBox="0 0 16 16">
        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zM7 6.5c0 .501-.164.396-.415.235C6.42 6.629 6.218 6.5 6 6.5c-.218 0-.42.13-.585.235C5.164 6.896 5 7 5 6.5 5 5.672 5.448 5 6 5s1 .672 1 1.5zm5.331 3a1 1 0 0 1 0 1A4.998 4.998 0 0 1 8 13a4.998 4.998 0 0 1-4.33-2.5A1 1 0 0 1 4.535 9h6.93a1 1 0 0 1 .866.5zm-1.746-2.765C10.42 6.629 10.218 6.5 10 6.5c-.218 0-.42.13-.585.235C9.164 6.896 9 7 9 6.5c0-.828.448-1.5 1-1.5s1 .672 1 1.5c0 .501-.164.396-.415.235z"/>
      </svg>
    </h3>
    <div class="row justify-content-center m-0 vh-100 mt-5">
        <div class=" col-10 col-sm-8 col-md-6 col-lg-5 col-xl-4 text-white">
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username"> Username</label>
                    <input class="form-control" type="text" id="username" placeholder="Your Username" autofocus name="username"  required>
                    <div class="invalid-feedback">Please enter a username</div>
                </div>

                <div class="mb-4">
                    <label class="form-label" for="password"> Password</label>
                    <input class="form-control" type="password" placeholder="Your Password" id="password" name="password"  required>
                    <div class="invalid-feedback">Please enter a password</div>
                </div>
                <button class="btn btn-success px-5 mx-auto d-block">Login</button>
            </form>
        </div>
    </div>
