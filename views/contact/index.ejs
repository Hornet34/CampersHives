<% layout('/layouts/boilerplate')%>
<link rel="stylesheet" href="/styleSheets/edit&new.css"></link>
<style>
    body{
    background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(/elements/contact.jpg);
}
</style>
<div class="row m-0 mt-5 justify-content-center">
    <div class="col-9 col-sm-7 col-md-5 col-xl-4 text-white">
        <form action="/contact" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="name"> Name</label>
                <input class="form-control" type="text" id="name" placeholder="Enter your Name" name="contact[name]" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter name</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email"> Email</label>
                <input class="form-control" type="email" id="email" placeholder="Enter your Email" name="contact[email]" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter email</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="subject"> Subject</label>
                <input class="form-control" type="text" id="subject" placeholder="Enter your Subject" name="contact[subject]" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter subject</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description"> Description</label>
                <textarea class="form-control" id="description" name="contact[description]" placeholder="Enter Your Thoughts" required></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter description</div>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary px-4">Contact</button>
            </div>
        </form>
    </div>
</div>